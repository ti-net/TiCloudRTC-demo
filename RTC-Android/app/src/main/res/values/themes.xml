<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RTCAndroid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#00018786</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SpaceHorizontal">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="EditTextWithDelete" parent="SpaceHorizontal">
<!--        <item name="android:layout_width">match_parent</item>-->
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

</resources>